- content_for(:title){ "#{@being.name} of #{@being.settlement.name}" } if @being.settlement
- content_for(:watermark) do 
  .watermark.sun_in_splendor

%h4= render partial:'being', locals:{ being:@being }
- if @being.married? 
  %h4 Spouse
  = render partial:'being', locals:{ being:@being.spouse }
%h4 Family
- if @children
  = @children.first
  %h5 Children
  %ul.being-children
    - @being.children.each do |child|
      = child.to_s
      = render partial:'being', locals:{ being:child }
- if @being.parent
  %h5 Parents
  %ul.being-parent
    = render partial:'being', locals:{ being:@being.parent }

%h4 History
%dl.events
  - @being.history.each do |event|
    %dt= event.name
    %dd= event.description

= link_to 'Edit', edit_being_path(@being)
\|
= link_to 'Back', beings_path
