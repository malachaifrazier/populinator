  %h4
    %a{href:'#'}= escape_once "#{families.first} with #{pluralize(families.last.select{|f| f.alive}.count + families.last.select{|f| f.married? }.count, 'living member')} and #{pluralize(families.last.select{|f| not f.alive}.count, 'dead member')}"
