= form_for @damage do |f|
  -if @damage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@damage.errors.count, "error")} prohibited this damage from being saved:"
      %ul
        - @damage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :duration
    = f.number_field :duration
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
